@model QLChatThai.Models.QLCTModel.Xuly

@{
    ViewBag.Title = "Create";
}

<h2>Nhập phương pháp xử lý</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        <div class="row">
            <div class="form-group col-sm-4">
                <label>Phương pháp xử lý</label>
                @Html.TextBoxFor(model => model.phuongphap, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.phuongphap)
            </div>
            <div class="form-group col-sm-4">
                <label>Mô tả</label>
                @Html.TextBoxFor(model => model.mota, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.mota)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
