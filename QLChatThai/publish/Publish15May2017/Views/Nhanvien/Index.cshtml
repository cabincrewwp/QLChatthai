@model IEnumerable<QLChatThai.Models.QLCTModel.Nhanvien>

@{
    ViewBag.Title = "Index";
    var grid = new WebGrid(source: Model);
}

<h2>Danh sách nhân viên</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<div>
    @grid.GetHtml(
            tableStyle: "table table-responsive table-bordered",
                    columns: grid.Columns(grid.Column(header: "STT", format: item => item.WebGrid.Rows.IndexOf(item) + 1),
                    grid.Column(columnName: "manv", header: "Mã NV"),
                    grid.Column(columnName: "fullname", header: "Họ và tên"),
                    grid.Column(columnName: "Bophan", header: "Bộ phận"),
                    grid.Column(columnName: "Congviec", header: "Công việc"),
                            grid.Column(columnName: "activated", header: "Trạng thái", format: (item) => @Html.Raw("<input type='checkbox' " + ((item.activated == true) ? "checked" : "") + " disabled='disabled' />"), style: "text-center checkbox-width"),
                    
            grid.Column(header: "", canSort: false, style: "action",
                format: @<text>
                @Html.Raw("<a data-modal='' href='/Nhanvien/Edit/" + item.manv + "'> <span class='glyphicon glyphicon-edit'> </span> </a>")
                @Html.Raw("<a data-modal='' href='/Nhanvien/Delete/" + item.manv + "'> <span class='glyphicon glyphicon-trash'> </span> </a>")
                </text>)
                                                     ))
</div>

