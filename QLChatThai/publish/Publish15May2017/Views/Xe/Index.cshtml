@model List<QLChatThai.Models.QLCTModel.DMXe>
<style type="text/css">
    .webgrid-table {
        font-family: Arial,sans-serif;
        font-size: 14px;
        font-weight: normal;
        width: auto;
        display: table;
        border-collapse: collapse;
        border: solid 1px #C5C5C5;
        background-color: white;
    }

        .webgrid-table th, td {
            border: solid 1px #C5C5C5;
            padding: 3px 7px 2px;
        }

    .webgrid-header, webgrid-header a {
        background-color: aqua;
        color: #ffffff;
        text-align: left;
        text-decoration: none;
    }

    .webgrid-footer {
    }

    .webgrid-row-style {
        padding: 3px 7px 2px;
    }

    .webgrid-alternating-row {
        background-color: azure;
        padding: 3px 7px 2px;
    }
</style>

@{
    ViewBag.Title = "Danh sách xe";
    var grid = new WebGrid(source: Model);
    
}
<h2>Danh mục xe</h2>
<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<div>
    @grid.GetHtml(columns:grid.Columns(grid.Column(header:"STT",format:item => item.WebGrid.Rows.IndexOf(item)+1),
            grid.Column(columnName:"Soxe",header:"Biển số xe"),
            grid.Column(columnName:"mota",header:"Mô tả"),
            grid.Column(header: "", canSort: false, style: "action",
                format: @<text>
                @Html.Raw("<a data-modal='' href='/Xe/Edit/" + item.soxe + "'> <span class='glyphicon glyphicon-edit'> </span> </a>")
                @Html.Raw("<a data-modal='' href='/Xe/Delete/" + item.soxe + "'> <span class='glyphicon glyphicon-trash'> </span> </a>")
                 </text>)
             ));
</div>
