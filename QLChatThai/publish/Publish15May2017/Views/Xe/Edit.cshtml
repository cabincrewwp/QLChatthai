@model QLChatThai.Models.QLCTModel.DMXe

@{
    ViewBag.Title = "Edit";
}

<h2>Chỉnh sửa thông tin phương tiện vận tải</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model=>model.Soxe)
        <div class="row">            
            <div class="form-group col-sm-12">
                <label>Mô tả</label>
